{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
        }
    },
    "rules": {
        "prettier/prettier": [
            "error", {
                "trailingComma": "es5"
            }
        ]
    }
}
